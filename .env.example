# Trading Bridge API Configuration
# Copy this file to .env and configure with your actual values

# Production Mode - Set to "true" for production deployment
# In production mode, API key MUST be set or container will fail to start
PRODUCTION_MODE=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration (comma-separated list of allowed origins)
# For production, specify exact origins. Default: localhost only
# Example: CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Bridge Configuration
BRIDGE_HOST=0.0.0.0
BRIDGE_PORT=5500

# API Key - CHANGE THIS to a secure random string!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
TRADING_BRIDGE_API_KEY=dev-key-change-me

# Optional: Telegram Notifications
# Get bot token from @BotFather on Telegram
TRADINGBRIDGE_TELEGRAM_BOT_TOKEN=

# Get chat ID from @userinfobot on Telegram
TRADINGBRIDGE_TELEGRAM_CHAT_ID=
