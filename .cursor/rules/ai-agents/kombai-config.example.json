{
  "agent_name": "Kombai",
  "provider": "kombai",
  "api_key_env": "KOMBAI_API_KEY",
  "features": {
    "figma_integration": true,
    "screenshot_conversion": true,
    "component_extraction": true,
    "responsive_generation": true
  },
  "output_settings": {
    "framework": "react",
    "styling": "tailwind",
    "typescript": true,
    "component_format": "functional",
    "file_extension": ".tsx"
  },
  "design_tokens": {
    "colors": "auto-extract",
    "spacing": "auto-extract",
    "typography": "auto-extract",
    "breakpoints": ["mobile", "tablet", "desktop", "wide"]
  },
  "code_preferences": {
    "semantic_html": true,
    "accessibility": true,
    "bem_naming": false,
    "css_modules": false,
    "prettier": true
  },
  "responsive_breakpoints": {
    "mobile": "320px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1440px"
  },
  "supported_frameworks": [
    "html",
    "react",
    "vue",
    "angular",
    "svelte"
  ],
  "output_directory": "./generated-components"
}
